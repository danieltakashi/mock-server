{
  "name": "MockServer",
  "version": "0.0.1",
  "private": true,
  "author": "Daniel Takashi",
  "scripts": {
    "dev": "nodemon --exec babel-node src/index.js",
    "build": "rimraf build && babel src --out-dir build",
    "prestart": "rimraf build && babel src --out-dir build",
    "start": "node build/index.js",
    "test": "cross-env NODE_ENV=test mocha --exit --recursive --require @babel/register --timeout=5000 src/**/*spec.js",
    "test:coverage": "cross-env NODE_ENV=test nyc --require @babel/register --reporter lcov --reporter text mocha --exit --recursive --timeout=5000 tests/**/*.js",
    "lint": "eslint ./src/ --ext .js",
    "lint-fix": "eslint ./src/ --ext .js --fix"
  },
  "type": "module",
  "payloads": {
    "directory": "./payloads",
    "cache": "./payloads/cache"
  },
  "devDependencies": {
    "@babel/cli": "^7.12.10",
    "@babel/core": "^7.12.10",
    "@babel/node": "^7.12.10",
    "@babel/plugin-transform-runtime": "^7.12.10",
    "@babel/preset-env": "^7.12.11",
    "@babel/register": "^7.12.10",
    "@babel/runtime": "^7.12.5",
    "babel-eslint": "^10.1.0",
    "chai": "^4.2.0",
    "cross-env": "^7.0.3",
    "eslint": "^7.16.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-prettier": "^3.3.0",
    "mocha": "^8.2.1",
    "nodemon": "^2.0.6",
    "nyc": "^15.1.0",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "supertest": "^6.0.1"
  },
  "dependencies": {
    "@hapi/joi": "^17.1.1",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "http-status-codes": "^2.1.4"
  }
}
